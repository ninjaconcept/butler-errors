!!!
%html
  %title= @page_title

  %meta{ charset: 'UTF-8' }
  %meta{ name: 'language', content: 'de_DE' }
  %meta{ content: 'IE=edge', 'http-equiv' => 'X-UA-Compatible' }
  %meta{ name: 'viewport', content: 'initial-scale = 1.0, minimum-scale=1.0, maximum-scale = 1.0, user-scalable = no, width = device-width' }

  = favicon_link_tag '/favicon.ico'

  = stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Open+Sans:700,600,400', media: 'all'
  = stylesheet_link_tag 'errors', media: 'all'

%body
  .dialog
    = link_to '/', title: 'Zur Startseite', class: 'logo' do
      = image_tag 'logo-errors.png'

    = yield
